<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Courses</h2>
        <hr />

          {{!-- <p>TODO: render a list of all course id's and names here</p> --}}
        <table class="table">
            <thead>
                <tr>
                    <th>Course Code</th> 
                    <th>Course Description</th>
                </tr>
            </thead>
            <tbody>
            {{#each courses}}
                <tr>
                    <td><a class="nav-link" href="/course/{{courseId}}">{{courseCode}}</a></td>
                    <td><a class="nav-link" href="/students?course={{courseId}}">{{courseDescription}}</a></td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
    {{#unless courses}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>
