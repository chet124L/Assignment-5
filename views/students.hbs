<div class="row">
    <div class="col-md-12 table-responsive">
        <br>
        <h2>Students</h2>
        <hr />

        {{!-- <p>TODO: render a list of all student first and last names here</p> --}}
        <table class="table">
            <thead>
                <tr>
                    <th>Student Num</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Status</th>
                    <th>Course ID</th>
                </tr>
            </thead>
            <tbody>
                {{#each students}}
                <tr>
                    <td>{{studentNum}}</td>
                    <td><a class="nav-link" href="/student/{{studentNum}}">{{firstName}} {{lastName}}</a></td>
                    <td><a href="mailto:{{email}}">{{email}}</a></td>
                    <td>{{addressStreet}}, {{addressCity}}, {{addressProvince}}</td>
                    <td>{{status}}</td>
                    <td><a class="nav-link" href="/students?course={{course}}">{{course}}</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{#unless students}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>
